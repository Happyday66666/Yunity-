@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "重新發送電子郵件確認信";
    Layout = "_LayoutUser"; // 指定不同的 Layout

}
<style>
    /* 居中整個視窗的內容 */
    body, html {
        height: 100%;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f4f6f9;
    }

    .form-container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 1200px;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    h2 {
        color: #555;
        font-size: 1.2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-floating input {
        border-radius: 5px;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
        font-weight: 600;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 0.875rem;
    }
</style>
<h3 style="color:#3255af;">@ViewData["Title"]</h3>
<div class="form-container">
  
    <h5>請輸入您的電子郵件。</h5>
    <form method="post">
        <div class="form-floating mb-3" style="width:800px">
            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label">電子郵件</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">重新發送</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
