@page
@model IndexModel
@{
    ViewData["ParentLayout"] = "_LayoutUser"; // 指定不同的 Layout
    
    ViewData["Title"] = "個人資料";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div class="container mt-5">
     
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <input type="hidden" asp-for="Username" />

                <!-- 姓名欄位 -->
                <div class="form-group mb-3">
                    <label asp-for="Input.Fname" class="form-label" style="font-size:20px">姓名</label>
                    <input asp-for="Input.Fname" class="form-control" placeholder="請輸入姓名" />
                    <span asp-validation-for="Input.Fname" class="text-danger"></span>
                </div>

                <!-- 帳號欄位 -->
                <div class="form-group mb-3">
                    <label asp-for="Input.Account" class="form-label" style="font-size:20px">帳號</label>
                    <input asp-for="Input.Account" class="form-control" readonly />
                    <span asp-validation-for="Input.Account" class="text-danger"></span>
                </div>

                <!-- 隱藏欄位 -->
                <input type="hidden" asp-for="Input.FbuildingId" />

                <!-- 大樓名稱欄位 -->
                <div class="form-group mb-3">
                    <label asp-for="Input.BuildingName" class="form-label" style="font-size:20px">大樓名稱</label>
                    <input asp-for="Input.BuildingName" class="form-control" placeholder="大樓名稱" readonly />
                    <span asp-validation-for="Input.BuildingName" class="text-danger"></span>
                </div>

                <!-- **地址欄位 (僅限 User 顯示)** -->
                @if (Model.Input.Role == "User")
                {
                    <div class="form-group mb-3">
                        <label asp-for="Input.FuserAddress" class="form-label" style="font-size:20px">地址</label>
                        <input asp-for="Input.FuserAddress" class="form-control" placeholder="地址" />
                        <span asp-validation-for="Input.FuserAddress" class="text-danger"></span>
                    </div>
                }

                <!-- 電話號碼欄位 -->
                <div class="form-group mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label" style="font-size:20px">電話號碼</label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="請輸入您的電話號碼" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                 <!-- **點數欄位 (僅限 User 顯示)** -->
                @if (Model.Input.Role=="User")
                {
                    <div class="form-group mb-3">
                        <label asp-for="Input.Points" class="form-label" style="font-size:20px">點數</label>
                        <input asp-for="Input.Points" class="form-control" readonly />
                        <span asp-validation-for="Input.Points" class="text-danger"></span>
                    </div>
                }


                <!-- 儲存按鈕 -->
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">儲存</button>
            </form>
        </div>
    </div>
</div>
 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
  
}

