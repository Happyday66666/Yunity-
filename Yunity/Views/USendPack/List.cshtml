 @model IEnumerable<Yunity.Models.SendPacksWrap>

@{
    Layout = "_LayoutUser";
    ViewData["Title"] = "List";
}
<style>
    /* 為所有按鈕加上底線，並設置初始顏色為灰色 */
    .btn-custom {
        border: none;
        text-decoration: none;
        position: relative;
    }

        .btn-custom::after {
            content: '';
            display: block;
            position: absolute;
            width: 100%;
            height: 2px;  
            background-color: #D0D0D0; /* 底線顏色 */
            bottom: 0; /* 放到底部 */
            left: 0;
            transition: background-color 0.3s ease; /* 設置過渡效果 */
        }

        /* 當鼠標懸停時，底線變為深藍色 */
        .btn-custom:hover::after {
            background-color: #3255af; /* 深藍色 */
        }

        /* 當按鈕被點擊或在焦點時，底線顏色也變為深藍色 */
        .btn-custom:focus::after, .btn-custom:active::after {
            background-color: #3255af; /* 深藍色 */
        }

    .card {
        display: flex;
        flex-direction: column;
        box-shadow: 0 4px 10px rgba(50, 85, 175, 0.2); /* 默認陰影 */
        transition: transform 0.2s ease, box-shadow 0.2s ease; /* 使變化過渡平滑 */
    }

        .card:hover {
            box-shadow: 0 8px 20px rgba(50, 85, 175, 0.2); /* 滑鼠懸停時增加陰影 */
            transform: translateY(-5px); /* 使卡片向上漂浮 */
        }

        .card:active {
            transform: translateY(2px); /* 按下時使卡片稍微向下移動，模擬點擊效果 */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* 按下時的陰影效果 */
        }

    .card-text {
        font-size: 20px;
    }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .card-text{
        font-size: 20px;
    }

    .alert-warning {
        font-size: 16px;
        color: #856404;
        background-color: #fff3cd;
        border-color: #ffeeba;
    }
</style>
<div class="container mt-3 mb-3" style="margin-left:250px;">
    <h2 class="d-flex justify-content-center" style="color:#3255af;">包裹寄送狀態</h2>


    
    <div class="container mt-3 mb-3 me-1 d-flex justify-content-center">
        <div class="d-flex my-5" style="gap: 15px; ">
            <button id="btnAll" class="btn btn-custom" style="font-weight: bold; "><i class="bi bi-truck-front-fill" style="margin-right:5px; font-size: 40px;"></i>全部</button>
            <button id="btnSent" class="btn btn-custom" style="font-weight: bold; "><i class="bi bi-send-check-fill" style="margin-right:5px; font-size: 40px; "></i>已寄送</button>
            <button id="btnNotSent" class="btn btn-custom" style="font-weight: bold; "><i class="bi bi-send-dash-fill" style="margin-right:5px; font-size: 40px; "></i>待處理</button>
    </div>
    </div>
<div class="row me-5">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <a href="@Url.Action("Details", new { id = item.Id })" class="card-link" style="text-decoration: none; color: inherit;">
                    <div class="card d-flex">
                        <img src="@item.PackPhoto" class="card-img-top" alt="包裹照片" style="height: 300px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title" style="color:#3255af;">
                                <!-- 修正了 style 屬性 -->
                                @if (item.State == "已寄送")  // 根據已寄出狀態顯示圖標
                                {
                                    <i class="bi bi-send-check-fill"></i>
                                }
                                else if (item.State == "待處理")  // 根據未寄出狀態顯示圖標
                                {
                                    <i class="bi bi-send-dash-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-box"></i>  <!-- 默認圖標 -->
                                }
                                包裹編號: @item.Id
                            </h5>

                            <p class="card-text">
                                <strong>包裹類型:</strong> @item.Type<br>
                                <strong>狀態:</strong> 
                                @if (item.State == "已寄送")  // 根據已寄出狀態顯示圖標
                                {
                                    <span style="color: forestgreen;font-weight:600;">@item.State</span>
                                }
                                else if (item.State == "待處理")  // 根據未寄出狀態顯示圖標
                                {
                                    <span style="color: red;font-weight:600;">@item.State</span>
                                }
                            </p> 
                            <i class="bi bi-arrow-right-circle " style="position: absolute; bottom: 10px; right: 10px; font-size: 30px; transition: color 0.3s; color:#3255af;"></i>
                        </div>
                    </div>
                    
                </a>   
            </div>
        }

</div>
</div>

@section Scripts{
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    
    $(document).ready(function(){
            console.log('Document is ready');  
         //點擊全部
         $('#btnAll').click(function(){
               console.log('Sent button clicked');
               filterPackages("全部");
         })
        //點擊已寄出
          $('#btnSent').click(function(){
                 console.log('Sent button clicked');  
            filterPackages("已寄送");
        })
        //點擊未寄出
        $('#btnNotSent').click(function(){
                  console.log('Not Sent button clicked'); 
            filterPackages("待處理");
        })

        //篩選包裹---根據state
        function filterPackages(state){
                 console.log('Filtering packages with state: ' + state);
                     var stateValue;
                if (state === "全部") {
                    stateValue = -1;   
                } else if (state === "已寄送") {
                    stateValue = 1;  
                } else if (state === "待處理") {
                    stateValue = 0;  
                }
            $.ajax({
                url:'@Url.Action("FilterAjax","USendPack")',
                type:'GET',
                    data:{state:stateValue}, 
                success:function(data){
                        console.log('Data received: ', data);  
                    $('.row').html(data);
                },
                error:function(){
                    alert('錯誤:無法加載資料')
                }
            
            });
        }
    })

</script>

}