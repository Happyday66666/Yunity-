<!DOCTYPE html>
<html lang="zh-Hant">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yunity_VenderSide_Layout</title>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=LXGW+WenKai+Mono+TC&family=Noto+Sans+TC:wght@500&display=swap"
          rel="stylesheet">
    <!-- Google Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined&display=swap">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- CSS -->
    <link rel="stylesheet" href="/assets_VendorSide/css/Yunity_VendorSide.css">

</head>

<body>
    <header>
        <var class="menu-var">
            <a href="\VendorSide\List" title="首頁">
                <img src="/assets_VendorSide/images/logo/雲社區服務LOGO.png" alt="" class="menu-logo">
            </a>
            
            <div class="menu-group">
                <a href="\VendorSide\List" class="menu-item" title="訂單管理" visited><span class="material-symbols-outlined">receipt_long</span>訂單</a>
                <a href="\VendorSide\Product" class="menu-item" title="商品管理"><span class="material-symbols-outlined">category</span>商品</a>
                <a href="\VendorSide\Setting" class="menu-item" title="我的設定"><span class="material-symbols-outlined">settings</span>設定</a>
                @* <partial name="_LoginPartial" /> *@
                @* <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "HomePage", new { area = "" })" class="menu-item" title="我的設定"><span class="material-symbols-outlined">logout</span>登出</a> *@
                <form class="form-inline d-inline" asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "HomePage", new { area = "" })">
                    <button type="submit" class="btn btn-link text-dark menu-item" title="登出">
                        <span class="material-symbols-outlined">
                            login
                        </span>登出
                    </button>
                </form>


            </div>
        </var>
    </header>

    <!-- 渲染子頁面內容 -->
    <div class="container">
        <partial name="_LoginPartial" />
        @RenderBody()
    </div>

    <footer>
            <p class="col-4 footer-p">
                <span class="material-symbols-outlined">
                    alternate_email
                </span>ineedyunity@gmail.com
            </p>
            <img class="col-4 footer-img" src="/assets_VendorSide/images/logo/雲社區服務LOGO.png" alt="">
            <p class="col-4 footer-p">
                <span class="material-symbols-outlined">
                    support_agent
                </span>04-1234-5678
            </p>
        </div>
    </footer>
    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
        <span class="material-symbols-outlined">
            keyboard_arrow_up
        </span>
    </a>
    <!-- jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- JS -->
    <script src="/assets_VendorSide/js/Yunity_VendorSide.js"></script>
    
    @RenderSection("Scripts", required: false)
</body>

</html>
