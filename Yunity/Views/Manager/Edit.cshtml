
@model Yunity.Models.CManagerWrap

@{
    ViewData["Title"] = "Edit";
}

<h1>修改資料</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @Html.AntiForgeryToken() <!-- ✅ 防止 CSRF 錯誤 -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FId" />
            <input type="hidden" asp-for="FAspUserId" /> <!-- ✅ 隱藏 FAspUserId -->


            <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="BuildingName" class="control-label"></label>

                <span asp-validation-for="BuildingName" class="text-danger"></span>
                <select asp-for="FBuildingId" asp-items="@ViewBag.Buildings" class="form-control"></select>

            </div>

            
          
            <div class="form-group">
                <label asp-for="FPhone" class="control-label"></label>
                <input asp-for="FPhone" class="form-control" />
                <span asp-validation-for="FPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FEmail" class="control-label"></label>
                <input asp-for="FEmail" class="form-control" />
                <span asp-validation-for="FEmail" class="text-danger"></span>
            </div>
           

            <div class="mb-3">
                <label class="form-label">審核狀態</label>
                <select asp-for="IsApproved" class="form-select">
                    <option value="Pending">待審核</option>
                    <option value="Approved">已核准</option>
                    <option value="Cancel">已取消</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" style = "color:black">取消</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
