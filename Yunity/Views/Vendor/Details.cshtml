
@model Yunity.Models.CCompanyWrap

@{
    ViewData["Title"] = "Details";
}



<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")" class="breadcrumb-item active" aria-current="page">
                首頁
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("VendorList","Vendor")" class="breadcrumb-item active" aria-current="page">
                廠商管理
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Details","Vendor", new { id = Model.CAid })" class="breadcrumb-item active" aria-current="page" style="color:#293C56">
                @Model.ComName
            </a>
        </li>
    </ol>
</nav>
    <h4>
        @Html.DisplayFor(model => model.ComName)
    </h4>
    <hr />
    
<div class="container">
    <div class="row">
        <!-- Left Column (Company Info) -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="container">
                        <table class="table">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComAddress)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComAddress)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComPerson)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComPerson)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComPhone)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComPhone)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComEmail)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComEmail)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComServerItem)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComServerItem)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComRegistrationNumber)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComRegistrationNumber)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComBusinessHours)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComBusinessHours)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComContractStartDate)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComContractStartDate)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComContractEndDate)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComContractEndDate)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComAccount)</th>
                                <td class="fontColor">@Html.DisplayFor(model => model.ComAccount)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComPassword)</th>
                                <td class="fontColor">**********</td>
                            </tr>
                            @* <tr> *@
                            @*     <th>@Html.DisplayNameFor(model => model.ComPermissions)</th> *@
                            @*     <td class="fontColor">@Html.DisplayFor(model => model.ComPermissions)</td> *@
                            @* </tr> *@
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.ComStatus)</th>
                                <td style="color: @(Model.ComStatus == 1 ? "green" : "red")">
                                    @(Model.ComStatus == 1 ? "正常" : "關閉")
                                </td>
                            </tr>
                            <tr>
                                <th>維修紀錄</th>
                                <td>
                                    <a href="@Url.Action("FixList","Vendor", new { id = Model.CAid })">
                                        <i class="bi bi-tools" style="color: #2953FF;"></i>
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

