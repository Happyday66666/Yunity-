</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function AreaIsOpen(area) {
            var switchElement = document.getElementById(area + '-switch');
            var hiddenInput = document.getElementById(area);

            if (switchElement.checked) {
                hiddenInput.value = 1;  
            } else {
                hiddenInput.value = 0;  
            }
        }
    </script>
}
