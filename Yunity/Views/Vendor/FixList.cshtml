@model List<Yunity.Models.CServHistoryWrap>

@{
    ViewData["Title"] = @ViewBag.ComName +"維修紀錄";
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index","Home")" class="breadcrumb-item active" aria-current="page">
                首頁
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("VendorList","Vendor")" class="breadcrumb-item active" aria-current="page">
                廠商管理
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("Details","Vendor", new { id = ViewBag.ID })" class="breadcrumb-item active" aria-current="page">
                @ViewBag.ComName
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="@Url.Action("FixList","Vendor")" class="breadcrumb-item active" aria-current="page" style="color:#293C56 ;">
                維修紀錄
            </a>
        </li>
    </ol>
</nav>
@using (Html.BeginForm())
{
    <div class="container mb-3">
        <div class="row align-items-center">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="input-group">
                    @Html.TextBox("txtKeyword", null, new { @class = "form-control" })
                    <button type="submit" class="btn btn-outline-secondary"><i class="bi bi-search rounded-end"></i></button>
                </div>
            </div>
            <div class="col-md-3 "></div>
        </div>
    </div>
}
<h3>@ViewBag.ComName</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ServiceWho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ServiceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ServiceStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ServiceFeedback)
            </th>
        </tr>
    </thead>
    <tbody>
@{
    int num = 0;
    foreach (var item in Model) {
        num++;
        <tr>
            <td>
                @num
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceWho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceFeedback)
            </td>
        </tr>
}}
    </tbody>
</table>
