@model Yunity.Models.NearStore

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>NearStore</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @* <div class="form-group"> *@
            @*     <label asp-for="BdId" class="control-label"></label> *@
            @*     <input asp-for="BdId" class="form-control" /> *@
            @*     <span asp-validation-for="BdId" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenTime" class="control-label"></label>
                <input asp-for="OpenTime" class="form-control" />
                <span asp-validation-for="OpenTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Addr" class="control-label"></label>
                <input asp-for="Addr" class="form-control" />
                <span asp-validation-for="Addr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            @* 顯示目前圖片（若有的話），並以 <img> 元素呈現 *@
            <div class="form-group">
                <label>Current Photo</label>
                <div>
                    <img id="imgPreview" src="@Url.Content(string.IsNullOrEmpty(Model.Photo) ? "~/images/noimage.png" : "~/NearStore/" + Model.Photo)" alt="Current Photo" style="max-width:200px;" />
                </div>
            </div>
            <div class="form-group">
                <label>Upload New Photo</label>
                <input type="file" id="uploadedPhoto" name="uploadedPhoto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            @* UpdateTime 欄位移除，交由後端自動更新 *@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // 當上傳檔案改變時，自動更新圖片預覽
        document.getElementById('uploadedPhoto').addEventListener('change', function (event) {
            var input = event.target;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imgPreview').setAttribute('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        });
    </script>
}
