 @model Dictionary<string, string>
@{
    Layout = "_LayoutUser";
}
 
<div class="container">
    <div class="mb-3">
        <h2 class="d-flex justify-content-center" style="color:#3255af;">款項確認</h2>
         
    </div>
    <form id="form" name="form" method="POST" action="https://payment-stage.ecpay.com.tw/Cashier/AioCheckOut/V5">
        @foreach (var key in @Model.Keys.ToList())
        {
            if (key == "ExpireDate" || key == "ReturnURL" || key == "OrderResultURL" || key == "ChoosePayment" || key == "PaymentInfoURL" || key == "EncryptType" || key == "ClientRedirectURL" || key == "CheckMacValue")
            {
                // 隱藏的欄位
                <input type="hidden" name="@key" value="@Model[key]" />
            }
            else
            {
                // 顯示的欄位，顯示中文名稱
                <div class="mb-3">
                    <!-- 根據需要顯示的中文欄位名稱 -->
                    <label for="@key"  style="font-size:20px;">@GetDisplayName(key)</label>
                    <input type="text" name="@key" value="@Model[key]" class="form-control" readonly />
                </div>
            }
        }
        <div class="mb-3">
            <button type="submit" id="checkoutBtn" class="btn btn-primary" style="">送出</button>
        </div>
    </form>
</div>

@functions {
    // 這個方法將英文的鍵轉換為中文顯示名稱
    public string GetDisplayName(string key)
    {
        return key switch
        {
            "MerchantID" => "商戶ID",
            "MerchantTradeNo" => "交易編號",
            "MerchantTradeDate" => "交易日期",
            "PaymentType" => "付款方式",
            "TotalAmount" => "總金額",
            "TradeDesc" => "商品描述",
            "ItemName" => "商品名稱",
            "ExpireDate" => "過期時間",
            "ReturnURL" => "回傳URL",
            "OrderResultURL" => "付款結果URL",
            "ChoosePayment" => "選擇付款方式",
            "PaymentInfoURL" => "付款資訊URL",
            "EncryptType" => "加密方式",
            "ClientRedirectURL" => "用戶完成付款後跳轉URL",
            _ => key  // 預設顯示英文鍵
        };
    }
}
