@model List<Yunity.Models.UserAreaReserveWithAreaInfo>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="text-center">
            <th>公設名稱</th>
            <th>預約時間</th>
            <th>開始時間</th>
            <th>預約人數</th>
            <th>結束時間</th>
            <th>預約狀態</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var reserve in Model)
            {
                <tr>
                    <td class="text-center">@reserve.PublicArea.Name</td>
                    <td class="text-center">
                        @reserve.ReserveTime?.ToString("yyyy/MM/dd HH:mm")
                    </td>
                    <td class="text-center">
                        @reserve.StartTime?.ToString("yyyy/MM/dd HH:mm")
                    </td>
                    <td class="text-center">@reserve.ReservedPeople</td>
                    <td class="text-center">
                        @reserve.EndTime?.ToString("yyyy/MM/dd HH:mm")
                    </td>
                    <td class="text-center">
                        @switch (reserve.State)
                        {
                            case 2:
                                @:<span class="text-secondary"><i class="bi bi-check-circle"></i></span>
                                break;
                            default:
                                @:<span class="text-danger"><i class="bi bi-x-circle"></i></span>
                                break;
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">目前沒有歷史紀錄</td>
            </tr>
        }
    </tbody>
</table>
