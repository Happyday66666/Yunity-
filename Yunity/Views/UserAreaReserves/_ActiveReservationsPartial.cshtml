@model List<Yunity.Models.UserAreaReserveWithAreaInfo>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="text-center">
            <th>公設名稱</th>
            <th>預約時間</th>
            <th>開始時間</th>
            <th>預約人數</th>
            <th>結束時間</th>
            <th>預約狀態</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var reserve in Model)
            {
                <tr>
                    <td class="text-center">@reserve.PublicArea.Name</td>
                    <td class="text-center">
                        @reserve.ReserveTime?.ToString("yyyy/MM/dd HH:mm")
                    </td>
                    <td class="text-center">
                        @reserve.StartTime?.ToString("yyyy/MM/dd HH:mm")
                    </td>
                    <td class="text-center">@reserve.ReservedPeople</td>
                    <td class="text-center">
                        @reserve.EndTime?.ToString("yyyy/MM/dd HH:mm")
                    </td>
                    <td class="text-center">
                        <span class="text-success">
                            <i class="bi bi-check-circle-fill"></i>
                        </span>
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@reserve.Id" class="btn btn-sm btn-primary" title="編輯">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@reserve.Id" class="btn btn-sm btn-info" title="詳情">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="CancelReservation" asp-route-id="@reserve.Id" class="btn btn-sm btn-danger" title="取消預約">
                            <i class="bi bi-x-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">目前沒有預約紀錄</td>
            </tr>
        }
    </tbody>
</table>
