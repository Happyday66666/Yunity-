@model Yunity.Models.UserAreaReserve

@{
    ViewData["Title"] = "取消預約";
    Layout = "_LayoutUser";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">取消預約</h1>
            <h3 class="text-center">您確定要取消這筆預約嗎？</h3>
            <div class="card p-4">
                <dl class="row">
                    <input type="hidden" asp-for="AreaId" />
                    <dt class="col-sm-3">公設名稱</dt>
                    <dd class="col-sm-9"> @ViewData["PublicAreaName"]</dd>

                    <dt class="col-sm-3">預約時間</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ReserveTime)</dd>

                    <dt class="col-sm-3">開始時間</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTime)</dd>

                    <dt class="col-sm-3">結束時間</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>

                    <dt class="col-sm-3">狀態</dt>
                    <dd class="col-sm-9">
                        @if (Model.State == 2)
                        {
                            <span class="text-warning">使用完畢</span>
                        }
                        else if (Model.State == 1)
                        {
                            <span class="text-success">預約成功</span>
                        }
                        else
                        {
                            <span class="text-danger">已取消</span>
                        }
                    </dd>
                </dl>

                <form asp-action="CancelReservation" method="post" class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="確認取消" class="btn btn-danger btn-lg mx-2" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">返回列表</a>
                </form>
            </div>
        </div>
    </div>
</div>
