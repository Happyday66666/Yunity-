@model Yunity.Models.CUsersInfoWrap
<style>

    .btn-link{
    padding:0px;
    }

  
    .control-label{
    margin-bottom:10px;
    margin-top:10px;
    }
 
    .fs-6 {
        font-size: 2rem !important;
    }

    
</style>
@{
    ViewData["Title"] = "Edit";
}

<h1>編輯用戶基本資料</h1>
<form asp-action="Edit">

    <div class="form-group" style="display: flex; justify-content: flex-end; align-items: center;">
        <!-- 按鈕 -->
        <button type="submit" class="btn btn-dark-light" style="font-size: 30px; margin-right: 0px; padding: 5px 10px;">
            <i class="bi bi-floppy" style="color: cornflowerblue;"></i>
        </button>

        <!-- 連結 -->
        @Html.ActionLink(" ", "List", new { id = Model.FId }, new { @class = "bi bi-check-circle edit-icon fs-6", @style = "color: green; font-size: 30px;" })
    </div>
 
 
<hr />
<div class="row">
    <div class="col-md-4">
       
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="FId" value="@Model.FId" />
            </div>
            <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <label asp-for="FPhone" class="control-label"></label>
                <input asp-for="FPhone" class="form-control" />
                <span asp-validation-for="FPhone" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="FUserAddress" class="control-label"></label>
                <input asp-for="FUserAddress" class="form-control" />
                <span asp-validation-for="FUserAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FEmail" class="control-label"></label>
                <input asp-for="FEmail" class="form-control" />
                <span asp-validation-for="FEmail" class="text-danger"></span>
            </div>  
        </form>
    </div>
</div>

 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
